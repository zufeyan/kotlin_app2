<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/png" />
                    <corners android:radius="@dimen/corners" />
                    <stroke android:width="1dp" android:color="@color/png" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/png" />
                    <corners android:radius="@dimen/corners" />
                    <stroke android:width="2dp" android:color="@color/png" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/select_tard" />
                    <stroke android:width="2dp" android:color="@color/select_tard" />
                    <padding android:left="@dimen/pad_h" android:right="@dimen/pad_h" />
                    <corners android:radius="@dimen/btn_corner" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/press_trad" />
                    <stroke android:width="2dp" android:color="@color/press_trad" />
                    <padding android:left="@dimen/pad_h" android:right="@dimen/pad_h" />
                    <corners android:radius="@dimen/btn_corner" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/select_tard" />
                    <stroke android:width="2dp" android:color="@color/select_tard" />
                    <padding android:left="@dimen/pad_h" android:right="@dimen/pad_h" />
                    <corners android:radius="@dimen/btn_corner" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/png" />
                    <stroke android:width="1dp" android:color="@color/png" />
                    <padding android:left="@dimen/pad_h" android:right="@dimen/pad_h" />
                    <corners android:radius="@dimen/btn_corner" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

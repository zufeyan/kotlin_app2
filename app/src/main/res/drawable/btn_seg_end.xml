<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/select" />
                    <stroke android:width="2dp" android:color="@color/select" />
                    <corners android:topRightRadius="@dimen/btn_corner" android:bottomRightRadius="@dimen/btn_corner" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/press" />
                    <stroke android:width="2dp" android:color="@color/press" />
                    <corners android:topRightRadius="@dimen/btn_corner" android:bottomRightRadius="@dimen/btn_corner" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/select" />
                    <stroke android:width="2dp" android:color="@color/select" />
                    <corners android:topRightRadius="@dimen/btn_corner" android:bottomRightRadius="@dimen/btn_corner" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/png" />
                    <stroke android:width="1dp" android:color="@color/select" />
                    <corners android:topRightRadius="@dimen/btn_corner" android:bottomRightRadius="@dimen/btn_corner" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            style="@style/Card.Theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/analysis_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/pad_h">

                <ImageView
                    android:id="@+id/analysis_photo"
                    style="@style/Image.FitWide"
                    android:layout_marginBottom="@dimen/pad_h"
                    android:contentDescription="@string/photo" />

                <TextView
                    android:id="@+id/analysis_header"
                    style="@style/Label.Header"
                    android:layout_marginBottom="@dimen/pad_v"
                    android:textColor="@color/tint" />

                <TextView
                    android:id="@+id/analysis_body"
                    style="@style/Label.Normal"
                    android:layout_marginBottom="@dimen/pad_v" />

                <TextView
                    android:id="@+id/analysis_post"
                    style="@style/Label.Tag"
                    android:layout_marginBottom="@dimen/pad_v" />



                <!--                <include-->

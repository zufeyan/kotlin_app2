<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_more"
    style="@style/Fragment.Default"
    tools:context="com.sctgold.ltsgold.android.fragments.MoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/pad_h"
        android:id="@+id/layout_more_fragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/more_grid_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/sign_out"
            style="@style/Button.Default"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/d20"
            android:text="@string/btn_out" />

    </LinearLayout>

</FrameLayout>
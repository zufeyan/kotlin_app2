<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_payment"
    style="@style/Fragment.main_color"
    tools:context="com.sctgold.wgold.android.fragments.PaymentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/pad_v">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pay_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pay_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ge4"
            android:orientation="horizontal" />

    </LinearLayout>

</FrameLayout>

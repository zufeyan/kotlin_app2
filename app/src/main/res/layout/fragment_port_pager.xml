<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_port_pager"
    style="@style/Fragment.Default"
    tools:context="com.sctgold.ltsgold.android.fragments.PortPagerFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/portViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/portTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/black_15"
        app:tabBackground="@drawable/tab_port_select"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp" />

</FrameLayout>
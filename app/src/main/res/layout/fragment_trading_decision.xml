<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_trading_decision"
    style="@style/Fragment.Default"
    tools:context="com.sctgold.ltsgold.android.fragments.TradingDecisionFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/trading_decision_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/table_pad_v"
                android:layout_marginBottom="@dimen/pad_v"
                android:stretchColumns="1">

                <TableRow style="@style/Row.Cell">

                    <TextView
                        android:id="@+id/row_trade_label1"
                        style="@style/Label.TBLabel"
                        android:layout_column="0" />

                    <TextView
                        android:id="@+id/row_trade_value1"
                        style="@style/Label.TBValue"
                        android:layout_column="1"
                        android:layout_span="2" />
                </TableRow>

                <TableRow style="@style/Row.Cell">

                    <TextView
                        android:id="@+id/row_trade_label2"
                        style="@style/Label.TBLabel"
                        android:layout_column="0" />

                    <TextView
                        android:id="@+id/row_trade_value2"
                        style="@style/Label.TBValue"
                        android:layout_column="1"
                        android:layout_span="2" />
                </TableRow>

                <TableRow style="@style/Row.Cell">

                    <TextView
                        android:id="@+id/row_trade_label3"
                        style="@style/Label.TBLabel"
                        android:layout_column="0" />

                    <TextView
                        android:id="@+id/row_trade_value3"
                        style="@style/Label.TBValue"
                        android:layout_column="1"
                        android:layout_span="2" />
                </TableRow>

                <TableRow style="@style/Row.Cell">

                    <TextView
                        android:id="@+id/row_trade_label4"
                        style="@style/Label.TBLabel"
                        android:layout_column="0" />

                    <TextView
                        android:id="@+id/row_trade_value4"
                        style="@style/Label.TBValue"
                        android:layout_column="1" />

                    <TextView
                        android:id="@+id/row_trade_unit4"
                        style="@style/Label.TBUnit"
                        android:layout_column="2" />
                </TableRow>

                <TableRow style="@style/Row.Cell">

                    <TextView
                        android:id="@+id/row_trade_label5"
                        style="@style/Label.TBLabel"
                        android:layout_column="0" />

                    <TextView
                        android:id="@+id/row_trade_value5"
                        style="@style/Label.TBValue"
                        android:layout_column="1" />

                    <TextView
                        android:id="@+id/row_trade_unit5"
                        style="@style/Label.TBUnit"
                        android:layout_column="2" />
                </TableRow>

                <TableRow style="@style/Row.Cell">

                    <TextView
                        android:id="@+id/row_trade_label6"
                        style="@style/Label.TBLabel"
                        android:layout_column="0" />

                    <TextView
                        android:id="@+id/row_trade_value6"
                        style="@style/Label.TBValue"
                        android:layout_column="1" />

                    <TextView
                        android:id="@+id/row_trade_unit6"
                        style="@style/Label.TBUnit"
                        android:layout_column="2" />
                </TableRow>

                <TableRow style="@style/Row.Cell">

                    <TextView
                        android:id="@+id/row_trade_label7"
                        style="@style/Label.TBLabel"
                        android:layout_column="0" />

                    <TextView
                        android:id="@+id/row_trade_value7"
                        style="@style/Label.TBValue"
                        android:layout_column="1" />

                    <TextView
                        android:id="@+id/row_trade_unit7"
                        style="@style/Label.TBUnit"
                        android:layout_column="2" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/lb_trade_decision_warning"
                style="@style/Label.Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lb_trade_decision_count"
                style="@style/Label.Count" />

            <TextView
                android:id="@+id/lb_trade_decision_second"
                style="@style/Label.Second" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d10">

                <Button
                    android:id="@+id/btn_confirm_trade_decision"
                    style="@style/Button.Default"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d10"
                    android:text="@string/btn_confirm"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.75" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/png"
    android:divider="@drawable/keyboard_divider"
    android:orientation="vertical"
    android:showDividers="beginning|middle|end"
    tools:ignore="HardcodedText">

    <TableRow style="@style/Keyboard.Row">

        <LinearLayout style="@style/Keyboard.Cell">

            <TextView
                android:id="@+id/key1"
                style="@style/Keyboard.Key"
                android:text="1"
                android:textColor="@color/pin_text" />
        </LinearLayout>

        <LinearLayout style="@style/Keyboard.Cell">

            <TextView
                android:id="@+id/key2"
                style="@style/Keyboard.Key"
                android:text="2"
                android:textColor="@color/pin_text"  />
        </LinearLayout>

        <LinearLayout style="@style/Keyboard.Cell">

            <TextView
                android:id="@+id/key3"
                style="@style/Keyboard.Key"
                android:text="3"
                android:textColor="@color/pin_text"  />
        </LinearLayout>
    </TableRow>

    <TableRow style="@style/Keyboard.Row">

        <LinearLayout style="@style/Keyboard.Cell">

            <TextView
                android:id="@+id/key4"
                style="@style/Keyboard.Key"
                android:text="4"
                android:textColor="@color/pin_text"  />
        </LinearLayout>

        <LinearLayout style="@style/Keyboard.Cell">

            <TextView
                android:id="@+id/key5"
                style="@style/Keyboard.Key"
                android:text="5"
                android:textColor="@color/pin_text"  />
        </LinearLayout>

        <LinearLayout style="@style/Keyboard.Cell">

            <TextView
                android:id="@+id/key6"
                style="@style/Keyboard.Key"
                android:text="6"
                android:textColor="@color/pin_text"  />
        </LinearLayout>
    </TableRow>

    <TableRow style="@style/Keyboard.Row">

        <LinearLayout style="@style/Keyboard.Cell">

            <TextView
                android:id="@+id/key7"
                style="@style/Keyboard.Key"
                android:text="7"
                android:textColor="@color/pin_text"  />
        </LinearLayout>

        <LinearLayout style="@style/Keyboard.Cell">

            <TextView
                android:id="@+id/key8"
                style="@style/Keyboard.Key"
                android:text="8"
                android:textColor="@color/pin_text"  />
        </LinearLayout>

        <LinearLayout style="@style/Keyboard.Cell">

            <TextView
                android:id="@+id/key9"
                style="@style/Keyboard.Key"
                android:text="9"
                android:textColor="@color/pin_text"  />
        </LinearLayout>
    </TableRow>

    <TableRow style="@style/Keyboard.Row">

        <LinearLayout style="@style/Keyboard.Cell">

            <TextView
                android:id="@+id/keySpecial"
                style="@style/Keyboard.Empty"
                android:textColor="@color/pin_text"  />
        </LinearLayout>

        <LinearLayout style="@style/Keyboard.Cell">

            <TextView
                android:id="@+id/key0"
                style="@style/Keyboard.Key"
                android:text="0"
                android:textColor="@color/pin_text"  />
        </LinearLayout>

        <LinearLayout style="@style/Keyboard.Cell">

            <com.sctgold.ltsgold.android.IconifiedTextView
                android:id="@+id/keyRemove"
                style="@style/Keyboard.Key"
                android:text="&#xe14a;"
                android:textColor="@color/pin_text"  />
        </LinearLayout>
    </TableRow>

</TableLayout>

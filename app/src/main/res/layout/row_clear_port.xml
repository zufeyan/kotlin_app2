<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Card.Theme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/clear_port_row_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/card_pad">

        <View
            android:id="@+id/clear_port_row_color"
            android:layout_width="@dimen/card_history_color_width"
            android:layout_height="@dimen/card_history_color_width"
            android:background="@drawable/corner_view" />

        <TextView
            android:id="@+id/clear_port_row_product"
            style="@style/Label.Card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/pad_v"
            android:layout_marginEnd="@dimen/pad_v"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="@dimen/lb_header"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/clear_port_row_next"
            style="@style/Icon.Next" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
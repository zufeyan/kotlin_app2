<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_product_cell"
    style="@style/Row.Normal">

    <TextView
        android:id="@+id/home_product_name"
        style="@style/Label.Row.Fit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingEnd="@dimen/row_space"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="@dimen/btn_min_size"
        app:autoSizeMaxTextSize="@dimen/lb_text"
        app:autoSizeStepGranularity="@dimen/btn_step_size" />

    <TextView
        android:id="@+id/home_product_sell"
        style="@style/Label.PriceHome"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:maxLines="1"
        android:paddingEnd="@dimen/row_space"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="@dimen/btn_min_size"
        app:autoSizeMaxTextSize="@dimen/lb_home_price"
        app:autoSizeStepGranularity="@dimen/btn_step_size" />

    <TextView
        android:id="@+id/home_product_buy"
        style="@style/Label.PriceHome"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:maxLines="1"
        android:paddingEnd="@dimen/row_space"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="@dimen/btn_min_size"
        app:autoSizeMaxTextSize="@dimen/lb_home_price"
        app:autoSizeStepGranularity="@dimen/btn_step_size" />

    <ImageView
        android:id="@+id/home_product_trade"
        style="@style/Icon.Next" />

</LinearLayout>
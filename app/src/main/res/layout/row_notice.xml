<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_notice"
    style="@style/Card.Theme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.sctgold.ltsgold.android.ExpandableLayout
        android:id="@+id/expand_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/pad_h">

        <LinearLayout
            android:id="@+id/notice_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/notice_icon_title"
                style="@style/Icon.Notice"
                android:layout_marginEnd="@dimen/pad_h"
                android:contentDescription="@string/photo" />

            <TextView
                android:id="@+id/notice_title"
                style="@style/Label.CollapseTitle"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/notice_icon_expand"
                style="@style/Icon.Notice"
                android:layout_marginStart="@dimen/pad_h"
                android:contentDescription="@string/photo" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/notice_flex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notice_body"
                style="@style/Label.ExpandedBody"
                android:layout_marginTop="@dimen/pad_h"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/notice_post"
                style="@style/Label.Tag"
                android:layout_marginTop="@dimen/pad_v"
                android:textColor="@color/white" />

        </LinearLayout>


    </com.sctgold.ltsgold.android.ExpandableLayout>

</androidx.cardview.widget.CardView>
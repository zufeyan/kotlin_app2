<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/port_money_card"
    style="@style/Card.Theme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/port_money_row_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/pad_h"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/port_money_lb1"
                style="@style/Label.TBLead"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/lb_text" />

            <TextView
                android:id="@+id/port_money_val1"
                style="@style/Label.TBValue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textColor="@color/text"
                android:textSize="@dimen/lb_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_h"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/port_money_lb2"
                style="@style/Label.TBLead"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/lb_text" />

            <TextView
                android:id="@+id/port_money_val2"
                style="@style/Label.TBValue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textColor="@color/text"
                android:textSize="@dimen/lb_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_h"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/port_money_lb3"
                style="@style/Label.TBLead"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/lb_text" />

            <TextView
                android:id="@+id/port_money_val3"
                style="@style/Label.TBValue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textColor="@color/text"
                android:textSize="@dimen/lb_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_h"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/port_money_lb4"
                style="@style/Label.TBLead"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/lb_text" />

            <TextView
                android:id="@+id/port_money_val4"
                style="@style/Label.TBValue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textColor="@color/text"
                android:textSize="@dimen/lb_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_h"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/port_money_lb5"
                style="@style/Label.TBLead"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/lb_text" />

            <TextView
                android:id="@+id/port_money_val5"
                style="@style/Label.TBValue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textColor="@color/text"
                android:textSize="@dimen/lb_text" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
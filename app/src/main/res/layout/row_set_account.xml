<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Card.Settings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/settings_account_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/card_pad">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/pad_h"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/settings_account_topic"
                style="@style/Label.Topic"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/settings_account_value"
                style="@style/Label.Topic"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="textEnd" />
        </LinearLayout>

        <ImageView
            android:id="@+id/settings_account_next"
            style="@style/Icon.Next"
            android:contentDescription="@string/photo" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Card.Settings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/settings_switch_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/card_pad">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/pad_h"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/settings_switch_topic"
                style="@style/Label.Topic" />

            <TextView
                android:id="@+id/settings_switch_sub"
                style="@style/Label.Sub" />

        </LinearLayout>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/settings_switch_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:gravity="center_vertical|end" />

    </LinearLayout>

</androidx.cardview.widget.CardView>